# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

# Autostart
exec mako
exec waybar
exec launch-redshift
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec steam
exec fractal
exec org.telegram.desktop
exec discord
exec ff

font Cantarell 12

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
set $menu rofi -show run

set $scripts ~/Source/sh

set $ws_1 "1 — browser"
set $ws_2 "2"
set $ws_3 "3"
set $ws_4 "4"
set $ws_5 "5"
set $ws_6 "6"
set $ws_7 "7"
set $ws_8 "8"
set $ws_9 "9 — steam"
set $ws_10 "10"

set $ws_11 "11 — discord"
set $ws_12 "12 — telegram"
set $ws_13 "13 — obs"
set $ws_14 "14"
set $ws_15 "15"
set $ws_16 "16"
set $ws_17 "17"
set $ws_18 "18"
set $ws_19 "19 — steam"
set $ws_20 "20"

set $first_monitor "Dell Inc. Dell S2716DG #ASOwvAqQj0Dd"
set $second_monitor "Unknown G-SYNC 241910 #ASNWvgsHCG3d"

gaps outer 20
gaps inner 10

title_align center

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/sway/)
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output $first_monitor mode 2560x1440@143.998001Hz position 0,0
output $second_monitor mode 1920x1080@144.001007Hz position 2560,360

bindsym $mod+u output $first_monitor mode 2560x1440@119.998001Hz; \
               output $second_monitor  mode 1920x1080@119.982002Hz

bindsym $mod+i output $first_monitor mode 2560x1440@143.998001Hz; \
               output $second_monitor  mode 1920x1080@144.001007Hz

### Idle configuration
#
# Example configuration:

exec swayidle \
    # timeout 300 'swaylock -c 000000' \
    timeout 600 'swaymsg "output * dpms off"' \
       resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -c 000000'

# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 600 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout us,ru
    xkb_options grp:alt_shift_toggle,compose:ralt,ctrl:swapcaps
    xkb_numlock enabled
}

input "1133:49970:Logitech_Gaming_Mouse_G502" {
    accel_profile flat
}

# seat seat0 fallback true
# seat seat1 attach "1133:49941:Logitech_Logitech_USB_Keyboard"

# Set first monitor workspaces to first monitor
workspace $ws_1 output $first_monitor
workspace $ws_2 output $first_monitor
workspace $ws_3 output $first_monitor
workspace $ws_4 output $first_monitor
workspace $ws_5 output $first_monitor
workspace $ws_6 output $first_monitor
workspace $ws_7 output $first_monitor
workspace $ws_8 output $first_monitor
workspace $ws_9 output $first_monitor
workspace $ws_10 output $first_monitor

# Set second monitor workspaces to second monitor
workspace $ws_11 output $second_monitor
workspace $ws_12 output $second_monitor
workspace $ws_13 output $second_monitor
workspace $ws_14 output $second_monitor
workspace $ws_15 output $second_monitor
workspace $ws_16 output $second_monitor
workspace $ws_17 output $second_monitor
workspace $ws_18 output $second_monitor
workspace $ws_19 output $second_monitor
workspace $ws_20 output $second_monitor

### Key bindings
#
# Basics:
#
    # start a terminal
    bindsym $mod+Return exec $term

    # kill focused window
    bindsym $mod+q kill

    # start your launcher
    bindsym $mod+d exec $menu

    # start emoji picker
    bindsym $mod+Shift+d exec $scripts/rofi-emoji.sh

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # reload the configuration file
    bindsym $mod+Shift+c reload

    # exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec $scripts/sway-exit.sh
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # _move_ the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

    # Move around outputs
    bindsym $mod+Ctrl+$left focus output left
    bindsym $mod+Ctrl+$down focus output down
    bindsym $mod+Ctrl+$up focus output up
    bindsym $mod+Ctrl+$right focus output right
    # Arrow keys
    bindsym $mod+Ctrl+Left focus output left
    bindsym $mod+Ctrl+Down focus output down
    bindsym $mod+Ctrl+Up focus output up
    bindsym $mod+Ctrl+Right focus output right
#
# Workspaces:
#
    # switch to workspace
    bindsym $mod+1 workspace $ws_1
    bindsym $mod+2 workspace $ws_2
    bindsym $mod+3 workspace $ws_3
    bindsym $mod+4 workspace $ws_4
    bindsym $mod+5 workspace $ws_5
    bindsym $mod+6 workspace $ws_6
    bindsym $mod+7 workspace $ws_7
    bindsym $mod+8 workspace $ws_8
    bindsym $mod+9 workspace $ws_9
    bindsym $mod+0 workspace $ws_10
    # move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace $ws_1
    bindsym $mod+Shift+2 move container to workspace $ws_2
    bindsym $mod+Shift+3 move container to workspace $ws_3
    bindsym $mod+Shift+4 move container to workspace $ws_4
    bindsym $mod+Shift+5 move container to workspace $ws_5
    bindsym $mod+Shift+6 move container to workspace $ws_6
    bindsym $mod+Shift+7 move container to workspace $ws_7
    bindsym $mod+Shift+8 move container to workspace $ws_8
    bindsym $mod+Shift+9 move container to workspace $ws_9
    bindsym $mod+Shift+0 move container to workspace $ws_10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

    bindsym $mod+F1 workspace $ws_11; mode "default"
    bindsym $mod+F2 workspace $ws_12; mode "default"
    bindsym $mod+F3 workspace $ws_13; mode "default"
    bindsym $mod+F4 workspace $ws_14; mode "default"
    bindsym $mod+F5 workspace $ws_15; mode "default"
    bindsym $mod+F6 workspace $ws_16; mode "default"
    bindsym $mod+F7 workspace $ws_17; mode "default"
    bindsym $mod+F8 workspace $ws_18; mode "default"
    bindsym $mod+F9 workspace $ws_19; mode "default"
    bindsym $mod+F10 workspace $ws_20; mode "default"

    bindsym $mod+Shift+F1 move container to workspace $ws_11; mode "default"
    bindsym $mod+Shift+F2 move container to workspace $ws_12; mode "default"
    bindsym $mod+Shift+F3 move container to workspace $ws_13; mode "default"
    bindsym $mod+Shift+F4 move container to workspace $ws_14; mode "default"
    bindsym $mod+Shift+F5 move container to workspace $ws_15; mode "default"
    bindsym $mod+Shift+F6 move container to workspace $ws_16; mode "default"
    bindsym $mod+Shift+F7 move container to workspace $ws_17; mode "default"
    bindsym $mod+Shift+F8 move container to workspace $ws_18; mode "default"
    bindsym $mod+Shift+F9 move container to workspace $ws_19; mode "default"
    bindsym $mod+Shift+F10 move container to workspace $ws_20; mode "default"
#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Ctrl+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    # bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    # bindsym $mod+minus scratchpad show

    bindsym XF86MonBrightnessDown exec brightnessctl set 20%-
    bindsym XF86MonBrightnessUp exec brightnessctl set 20%+

    bindsym $mod+plus \
        gaps inner all set 10; \
        gaps outer all set 20; \
        gaps inner 10; \
        gaps outer 20
    bindsym $mod+minus \
        gaps inner all set 0; \
        gaps outer all set 0; \
        gaps inner 0; \
        gaps outer 0
    bindsym $mod+Ctrl+Shift+L exec swaylock

    # Screenshots
    bindsym Print exec way-shot
    bindsym Ctrl+Print exec way-shot --screen

for_window [title="FreeRDP.*"] floating enable
for_window [app_id="mpv"] floating enable
assign [class="discord"] → workspace $ws_11
assign [class="Steam" title="Friends List"] → workspace $ws_19
assign [class="Steam" title="Steam"] → workspace $ws_9
assign [class="Telegram"] → workspace $ws_12
assign [app_id="fractal"] → workspace $ws_12

#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "second monitor" {
    bindsym $mod+1 workspace $ws_11; mode "default"
    bindsym $mod+2 workspace $ws_12; mode "default"
    bindsym $mod+3 workspace $ws_13; mode "default"
    bindsym $mod+4 workspace $ws_14; mode "default"
    bindsym $mod+5 workspace $ws_15; mode "default"
    bindsym $mod+6 workspace $ws_16; mode "default"
    bindsym $mod+7 workspace $ws_17; mode "default"
    bindsym $mod+8 workspace $ws_18; mode "default"
    bindsym $mod+9 workspace $ws_19; mode "default"
    bindsym $mod+0 workspace $ws_20; mode "default"

    bindsym $mod+Shift+1 move container to workspace $ws_11; mode "default"
    bindsym $mod+Shift+2 move container to workspace $ws_12; mode "default"
    bindsym $mod+Shift+3 move container to workspace $ws_13; mode "default"
    bindsym $mod+Shift+4 move container to workspace $ws_14; mode "default"
    bindsym $mod+Shift+5 move container to workspace $ws_15; mode "default"
    bindsym $mod+Shift+6 move container to workspace $ws_16; mode "default"
    bindsym $mod+Shift+7 move container to workspace $ws_17; mode "default"
    bindsym $mod+Shift+8 move container to workspace $ws_18; mode "default"
    bindsym $mod+Shift+9 move container to workspace $ws_19; mode "default"
    bindsym $mod+Shift+0 move container to workspace $ws_20; mode "default"

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+c mode "second monitor"

