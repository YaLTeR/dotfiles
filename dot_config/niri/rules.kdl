// I want mpv's window dragging, and it disables that on tiled state.
window-rule {
    match app-id="^mpv$"
    tiled-state false
}

/-window-rule {
    match at-startup=false
    exclude app-id="^Alacritty$"
    exclude app-id="^neovide$"
    exclude app-id="firefox$"

    open-floating true
}

/-window-rule {
    match is-active-in-column=false

    min-height 100
    max-height 100
}

/-window-rule {
    match is-floating=true
    exclude app-id="^mpv$"
    exclude app-id="^foot$"

    tiled-state false
    clip-to-geometry false

    shadow {
        off;
        // on;
    }

    border { off; }
    focus-ring { off; }
}

/-window-rule {
    match is-floating=true app-id="^foot$"
